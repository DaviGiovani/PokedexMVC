<body>
    <div class="search-container">
        <h1>Busque um Pokémon</h1>
        <form action="/pokemon" method="GET" class="search-form">
            <input type="text" name="name" placeholder="Digite o nome do Pokémon" required class="search-input">
            <button type="submit" class="search-button">Buscar</button>
        </form>
        <h2>Compare 2 Pokémons</h2>
        <form action="/compare" method="get" class="search-form">
        <label for="name1">Pokémon 1:</label>
        <input type="text" name="name1" placeholder="Digite o primeiro Pokémon" required class="search-input">
        
        <label for="name2">Pokémon 2:</label>
        <input type="text" name="name2" placeholder="Digite o segundo Pokémon" required class="search-input">
        
        <button type="submit" class="search-button">Comparar</button>
    </form>
    </div>
</body>
